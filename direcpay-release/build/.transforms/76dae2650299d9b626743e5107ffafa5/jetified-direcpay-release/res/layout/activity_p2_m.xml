<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bayanpay.P2MActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="120dp"
                android:layout_height="140dp"
                android:layout_margin="16dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_bw_register_logo" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/textColor"></View>

            <dp.toml.directpay.bayanpay.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/welcome"
                android:textColor="@color/textColor"
                android:textSize="16dp" />

            <dp.toml.directpay.bayanpay.CustomTextView
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="NASEER ALMUBIRIK"
                android:textColor="#065C7A"
                android:textSize="20dp" />

            <dp.toml.directpay.bayanpay.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/bayanpay_wallet_balance"
                android:textColor="@color/textColor"
                android:textSize="16dp" />

            <dp.toml.directpay.bayanpay.CustomTextView
                android:id="@+id/txtBalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="SAR 8264.33"
                android:textColor="#065C7A"
                android:textSize="20dp" />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:layout_margin="16dp"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/card_layout"
                    android:focusableInTouchMode="true"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <dp.toml.directpay.bayanpay.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/transaction_amount"
                        android:textColor="@color/textColor"
                        android:textSize="18dp" />

                    <dp.toml.directpay.bayanpay.CustomTextView
                        android:id="@+id/txtTxnAmt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="SAR 10.00"
                        android:textColor="#065C7A"
                        android:textSize="20dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginTop="8dp"
                        android:background="@color/textColor"></View>

                    <dp.toml.directpay.bayanpay.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/confirm_with_pin"
                        android:textColor="#065C7A"
                        android:textSize="18dp" />

                    <dp.toml.directpay.bayanpay.NumericInputField
                        android:id="@+id/edtMPIN"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layoutDirection="ltr"
                        android:layout_marginTop="16dp"
                        android:visibility="visible"
                        app:length="four"
                        app:type="password"
                        app:textcolor="#000000" />
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="16dp"
                        android:padding="16dp"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        
                            <customviews.CustomButton

                              android:id="@+id/btnConfirm"
                              android:layout_width="0px"
                              android:layout_weight="1"
                              android:textColor="#fff"
                              android:layout_marginRight="10dp"
                              android:layout_height="wrap_content"
                              android:background="@drawable/bayanpay_button"
                              android:text="@string/confirm" />

                          <customviews.CustomButton

                            android:id="@+id/btnCancel"
                            android:layout_width="0px"
                            android:layout_weight="1"
                             android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                            android:background="@drawable/cancel_button"
                            android:textColor="#fff"
                            android:layout_height="wrap_content"
                            android:text="@string/cancel" />
                    </LinearLayout>

                </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>