<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/ll_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"

    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layoutCC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/paymode_blocks"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="2dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/ll_child_paymode"
            >

            <RadioButton
                android:id="@+id/rb"
                 android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:drawablePadding="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                />

            <customviews.CustomTextView
                android:id="@+id/txtPayMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:text="@string/credit_card"
                android:textColor="#000"
                android:padding="10dp"
                android:textSize="16dp" />
        </LinearLayout>

        <View
            android:id="@+id/lineview"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="2dp"
            android:background="#969696"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/layoutExpandCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="8dp"
            android:visibility="gone">


            <customviews.CardEntryLayoutNew
                android:id="@+id/cardEntry"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></customviews.CardEntryLayoutNew>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
